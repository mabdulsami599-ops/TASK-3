ITERATIVE

Input: arr[0â€¦n-1]
Output: arr rearranged with odds first and evens later
Create a new temporary array temp[n]
Initialize index_odd = 0
Initialize index_even = n - 1
FOR i = 0 TO n-1 DO
IF arr[i] is odd THEN
temp[index_odd] = arr[i]
index_odd = index_odd + 1
ELSE
temp[index_even] = arr[i]
index_even = index_even - 1
END IF
END FOR
Copy all elements from temp back to arr
RETURN


RECURSIVE
Function rearrange_recursive(arr, n, i, nextOdd)

    IF i == n THEN
        RETURN        // Base case: reached end of array
    END IF

    IF arr[i] is odd THEN
        swap(arr[i], arr[nextOdd])
        rearrange_recursive(arr, n, i + 1, nextOdd + 1)
    ELSE
        rearrange_recursive(arr, n, i + 1, nextOdd)
    END IF
END FUNCTION


// MAIN WRAPPER THAT WILL BE CALLED
Function rearrange(arr, n)
    rearrange_recursive(arr, n, 0, 0)
    RETURN
END FUNCTION
